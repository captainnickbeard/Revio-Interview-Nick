                <option value="WI">Wisconsin</option>
                <option value="WY">Wyoming</option>

            </select>

            <input name="City" type="text" />
            <input type="submit" name="Submit" />
        </div>
         <br />

        @if(ViewBag.error != null)
        {
            <h2>@ViewBag.error</h2>
        }
        @if (ViewBag.date != null)
        {
        <div class="day">
            <h4>@ViewBag.city, @ViewBag.state</h4>
            <img src="@ViewBag.icon" style="align-self:center" />
            <p  style="align-self:center">@ViewBag.condition</p>
            <p>Wind: @ViewBag.windspeed</p>
            <p>@ViewBag.date</p>
        </div>
        }
        </form>
</body>
</html>
